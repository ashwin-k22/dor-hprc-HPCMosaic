{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                  // Allows mixing JavaScript and TypeScript files
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",               // Use "react" if you're not on React 17+
    "noEmit": false,                  // Set to false if you want TypeScript to output compiled files
    "outDir": "./dist"                // Output directory for compiled files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

